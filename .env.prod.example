# PostgreSQL Configuration
POSTGRES_USER=finislam
POSTGRES_PASSWORD=your_strong_password_here
POSTGRES_DB=islamic_finance

# Ollama Configuration
# Cloud URL for main LLM model (gpt-oss:120b-cloud)
OLLAMA_CLOUD_URL=https://ollama.com

# Local URL for embedding model (containerized Ollama)
OLLAMA_BASE_URL=http://ollama:11434

# Ollama Models
OLLAMA_MODEL=gpt-oss:120b-cloud
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# Ollama API Key (required for cloud models)
OLLAMA_API_KEY=your-ollama-api-key-here

# CORS Origins (comma-separated for multiple)
# Not required if using nginx proxy (same-origin)
CORS_ORIGINS=http://localhost

# Optional: Override default port mappings
# FRONTEND_PORT=80
