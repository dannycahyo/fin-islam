# PostgreSQL Configuration (containerized)
POSTGRES_USER=finislam
POSTGRES_PASSWORD=devpassword
POSTGRES_DB=islamic_finance
DATABASE_URL=postgres://finislam:devpassword@localhost:5432/islamic_finance

# Ollama Configuration (local, not containerized)
# Run locally: ollama serve
OLLAMA_BASE_URL=http://localhost:11434

# For cloud models (optional - leave empty to use local models)
# OLLAMA_CLOUD_URL=https://ollama.com
# OLLAMA_API_KEY=your-ollama-api-key-here

# Ollama Models
# Local: llama3.1:8b, mistral, etc.
# Cloud: gpt-oss:120b-cloud (requires OLLAMA_CLOUD_URL and OLLAMA_API_KEY)
OLLAMA_MODEL=llama3.1:8b
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# Backend
PORT=3001
NODE_ENV=development

# Frontend
VITE_API_URL=http://localhost:3001
